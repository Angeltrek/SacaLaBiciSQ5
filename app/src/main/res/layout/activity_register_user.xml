<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Fondo -->
    <View
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/vector_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="375dp"
        android:layout_height="160dp"
        android:background="@drawable/vector_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:layout_width="350dp"
        android:layout_height="165dp"
        android:background="@drawable/vector_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <!-- Guias -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <!-- Contenedor principal -->
    <View
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_guideline" />

    <!-- Barra de tareas -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintStart_toStartOf="@+id/container" />

    <!-- Botón de regreso -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bBack"
        android:layout_width="17.71dp"
        android:layout_height="15.5dp"
        android:src="@drawable/back_button"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar" />

    <!-- Título de la vista -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear cuenta"
        android:textFontWeight="700"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- Imagen de bicicleta -->
    <View
        android:id="@+id/bike"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_bike"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- Correo electrónico -->
    <TextView
        android:id="@+id/lEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Correo electrónico"
        android:textFontWeight="700"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <!-- Campo de texto de correo electrónico -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lEmail"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintEnd_toEndOf="@+id/container"><com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:padding="16dp"
        android:layout_marginTop="5dp"
        android:textSize="14dp"
        android:hint="Correo electrónico" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nombre de usuario -->
    <TextView
        android:id="@+id/lNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nombre de usuario"
        android:textFontWeight="700"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintTop_toBottomOf="@id/email" />

    <!-- Campo de texto de nombre de usuario -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lNameUser"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintEnd_toEndOf="@+id/container"><com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:padding="16dp"
        android:layout_marginTop="5dp"
        android:textSize="14dp"
        android:hint="Nombre de usuario" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Fecha de nacimeinto -->
    <TextView
        android:id="@+id/lDateBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Fecha de Nacimiento"
        android:textFontWeight="700"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintTop_toBottomOf="@id/nameUser" />

    <!-- Advertencia de informacion publica -->
    <TextView
        android:id="@+id/lAdvertisement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esta información no será pública. "
        android:textFontWeight="700"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintTop_toBottomOf="@id/lDateBirth" />

    <!-- Campo de texto de fecha de nacimiento -->
    <TextView
        android:id="@+id/txtFecha"
        android:text="@string/tv_fecha"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lAdvertisement"
        app:layout_constraintStart_toStartOf="@+id/container"/>

    <!-- Botón de fecha -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        app:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        app:icon="@drawable/ic_calendario"
        app:layout_constraintTop_toBottomOf="@id/lAdvertisement"
        app:layout_constraintStart_toEndOf="@id/txtFecha" />

    <!-- Botón de continuar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bContinue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_marginTop="50dp"
        app:cornerRadius="14dp"
        app:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintTop_toBottomOf="@id/lAdvertisement" />

    <!-- Libreria DatePicker -->
    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>