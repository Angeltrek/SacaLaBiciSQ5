<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="198dp"
        android:layout_height="155dp"
        android:src="@drawable/logo_saca_la_bici_1"
        app:layout_constraintBottom_toBottomOf="@id/top_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.4"
        android:orientation="horizontal"/>

    <View
        android:id="@+id/yellow_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_top_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/middle_guideline" />

    <View android:id="@+id/vLogin"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_guideline"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explora y disfruta Querétaro"
        android:textSize="18sp"
        app:layout_constraintVertical_bias="0.09"
        app:layout_constraintBottom_toBottomOf="@+id/vLogin"
        app:layout_constraintEnd_toEndOf="@+id/vLogin"
        app:layout_constraintStart_toStartOf="@+id/vLogin"
        app:layout_constraintTop_toTopOf="@+id/vLogin"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Es genial tenerte aquí"
        android:textSize="14sp"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintBottom_toBottomOf="@+id/vLogin"
        app:layout_constraintEnd_toEndOf="@+id/vLogin"
        app:layout_constraintStart_toStartOf="@+id/vLogin"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>

    <Button
        android:id="@+id/bRegister"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:backgroundTint="#FFCC00"
        android:text="Crea una cuenta"
        android:textSize="14sp"
        app:cornerRadius="14dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="@+id/vLogin"
        app:layout_constraintEnd_toEndOf="@+id/vLogin"
        app:layout_constraintStart_toStartOf="@+id/vLogin"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:backgroundTint="#FFFFFF"
        android:text="Iniciar sesión"
        android:textColor="#000000"
        android:textSize="14sp"
        app:cornerRadius="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/vLogin"
        app:layout_constraintEnd_toEndOf="@+id/vLogin"
        app:layout_constraintStart_toStartOf="@+id/vLogin"
        app:layout_constraintTop_toBottomOf="@+id/bRegister"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#D9D9D9"
        app:strokeWidth="1dp" />

    <View
        android:id="@+id/leftLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintVertical_bias="0.18"
        app:layout_constraintBottom_toBottomOf="@+id/vLogin"
        app:layout_constraintStart_toStartOf="@+id/vLogin"
        app:layout_constraintTop_toBottomOf="@+id/bLogin"
        app:layout_constraintEnd_toStartOf="@+id/tvContinue"
        app:layout_constraintWidth_percent="0.2"/>

    <TextView
        android:id="@+id/tvContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O continúa con"
        android:textSize="11sp"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintBottom_toBottomOf="@+id/vLogin"
        app:layout_constraintEnd_toEndOf="@+id/vLogin"
        app:layout_constraintStart_toStartOf="@+id/vLogin"
        app:layout_constraintTop_toBottomOf="@+id/bLogin"/>

    <View
        android:id="@+id/rightLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintVertical_bias="0.18"
        app:layout_constraintBottom_toBottomOf="@+id/vLogin"
        app:layout_constraintStart_toEndOf="@+id/tvContinue"
        app:layout_constraintTop_toBottomOf="@+id/bLogin"
        app:layout_constraintEnd_toEndOf="@+id/vLogin"
        app:layout_constraintWidth_percent="0.2"/>

</androidx.constraintlayout.widget.ConstraintLayout>