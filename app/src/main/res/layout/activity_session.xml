<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:src="@drawable/logo_saca_la_bici_1"
        app:layout_constraintBottom_toBottomOf="@id/top_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>

    <View
        android:id="@+id/yellow_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_top_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/middle_guideline" />

    <View android:id="@+id/vLogin"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:background="@drawable/rounded_corners"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/top_guideline"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Explora y disfruta Querétaro"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/vLogin"
        app:layout_constraintStart_toStartOf="@+id/vLogin"
        app:layout_constraintTop_toTopOf="@id/vLogin" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Es genial tenerte aquí"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="@+id/vLogin"
        app:layout_constraintStart_toStartOf="@+id/vLogin"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bRegister"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="25dp"
        android:text="Crea una cuenta"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:cornerRadius="14dp"
        app:backgroundTint="@color/yellow"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintEnd_toEndOf="@+id/vLogin"
        app:layout_constraintStart_toStartOf="@+id/vLogin"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bLogin"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="5dp"
        android:text="Iniciar sesión"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:cornerRadius="14dp"
        app:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/bRegister"
        app:layout_constraintEnd_toEndOf="@+id/vLogin"
        app:layout_constraintStart_toStartOf="@+id/vLogin"
        app:strokeColor="#D9D9D9"
        app:strokeWidth="1dp" />

    <View
        android:id="@+id/leftLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toStartOf="@+id/lContinue"
        app:layout_constraintStart_toStartOf="@+id/vLogin"
        app:layout_constraintTop_toBottomOf="@+id/bLogin"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/lContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O continúa con"
        android:textSize="11sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/bLogin"
        app:layout_constraintStart_toStartOf="@id/vLogin"
        app:layout_constraintEnd_toEndOf="@id/vLogin" />

    <View
        android:id="@+id/rightLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/vLogin"
        app:layout_constraintStart_toEndOf="@+id/lContinue"
        app:layout_constraintTop_toBottomOf="@+id/bLogin"
        app:layout_constraintWidth_percent="0.3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bGoogle"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="5dp"
        android:text="Registrarse con Google"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:cornerRadius="14dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/lContinue"
        app:layout_constraintEnd_toEndOf="@+id/vLogin"
        app:layout_constraintStart_toStartOf="@+id/vLogin"
        app:strokeColor="#D9D9D9"
        app:strokeWidth="1dp"
        app:icon="@drawable/ic_google"
        app:iconTint="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bFacebook"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="5dp"
        android:text="Registrarse con Facebook"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:cornerRadius="14dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/bGoogle"
        app:layout_constraintEnd_toEndOf="@+id/vLogin"
        app:layout_constraintStart_toStartOf="@+id/vLogin"
        app:strokeColor="#D9D9D9"
        app:strokeWidth="1dp"
        app:icon="@drawable/ic_facebook"
        app:iconTint="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>